---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import Card from '../../components/Card.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				list-style-type: none;
				padding: unset;
			}
			ul li {
				display: flex;
			}
			ul li :global(time) {
				flex: 0 0 130px;
				font-style: italic;
				color: var(--foreground);
			}
			ul li a:visited {
				color: #4e4eee;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="container">
				<div class="cards">
					{
						projects.map((project) => (
							<div class="card">
								<a href={`/work/${project.slug}/`}>
									<img class="card-img" src={project.data.thumb} />
								</a>
								<a class="card-title" href={`/work/${project.slug}/`}>{project.data.title} <h3 class="card-type">â€¢ {project.data.type}</h3></a>
							</div>
							// <Card title={project.data.title} image={project.data.heroImage} slug={`/work/${project.slug}/`} type={project.data.type} />
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style lang="css">
 .container {
	 height: 100%;
	 width: 100%;
	 padding: 2rem 0;
	 display: grid;
	 place-content: center;
}
 .container .cards {
	 display: grid;
	 grid-template-columns: repeat(2, 1fr);
	 gap: 0.75rem;
	 pointer-events: none;
}
 .container .card {
	 max-width: 15rem;
	 color: #fff da;
	 background-color: #202022;
	 pointer-events: auto;
	 transform: scale(1);
	 opacity: 1;
	 transition: all 150ms ease-in-out;
	 display: flex;
	 flex-direction: column;
}
 .container .card .card-title {
	 display: flex;
	 flex-direction: row;
	 align-items: center;
	 position: relative;
	 padding: 1rem;
	 text-decoration: none;
}
.container .card .card-title:hover {
	color: var(--primary);
}
.container .card .card-title .card-type {
	font-weight: normal;
	font-size: 0.6rem;
	margin: 0;
	margin-left: 0.2rem;
}
 .container .card:nth-child(n) {
	 transform: rotate(-5deg);
}
 .cards:hover > .card:hover {
	 transform: scale(1.15);
	 box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
	 z-index: 10;
}
 .cards:hover > .card:not(:hover) {
	 opacity: 0.5;
}
 
</style>